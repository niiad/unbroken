                <Font name="Trebuchet MS" size="14.0" />
            </font>
        </TextField>
        <TextField fx:id="taxTypeField" layoutX="14.0" layoutY="192.0" prefHeight="40.0" prefWidth="150.0" promptText="Tax Type" stylesheets="@css/styles.css">
